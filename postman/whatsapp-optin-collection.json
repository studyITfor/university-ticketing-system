{
  "info": {
    "name": "WhatsApp Opt-in API Tests",
    "description": "Collection for testing WhatsApp opt-in functionality including double opt-in workflow",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "testPhone",
      "value": "+1234567890",
      "type": "string"
    },
    {
      "key": "testName",
      "value": "Test User",
      "type": "string"
    },
    {
      "key": "testSurname",
      "value": "Test Surname",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Opt-in Endpoints",
      "item": [
        {
          "name": "Opt-in - Valid Request",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"{{testName}}\",\n  \"surname\": \"{{testSurname}}\",\n  \"phone\": \"{{testPhone}}\",\n  \"optin_source\": \"booking_form\",\n  \"booking_id\": null\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/optin",
              "host": ["{{baseUrl}}"],
              "path": ["api", "optin"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has success field', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('success', true);",
                  "});",
                  "",
                  "pm.test('Response has phone field', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('phone');",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Opt-in - Invalid Phone Format",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"{{testName}}\",\n  \"surname\": \"{{testSurname}}\",\n  \"phone\": \"1234567890\",\n  \"optin_source\": \"booking_form\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/optin",
              "host": ["{{baseUrl}}"],
              "path": ["api", "optin"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 400', function () {",
                  "    pm.response.to.have.status(400);",
                  "});",
                  "",
                  "pm.test('Response has error field', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('error');",
                  "});",
                  "",
                  "pm.test('Error message mentions phone format', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.error).to.include('phone number format');",
                  "});"
                ]
              }
            }
          ]
        },
        {
          "name": "Opt-in - Missing Required Fields",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"{{testName}}\",\n  \"phone\": \"{{testPhone}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/optin",
              "host": ["{{baseUrl}}"],
              "path": ["api", "optin"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 400', function () {",
                  "    pm.response.to.have.status(400);",
                  "});",
                  "",
                  "pm.test('Response has error field', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('error');",
                  "});",
                  "",
                  "pm.test('Error message mentions missing fields', function () {",
                  "    const jsonData = pm.response.json();",
                  "    pm.expect(jsonData.error).to.include('Missing required fields');",
                  "});"
                ]
              }
            }
          ]
        }
      ]
