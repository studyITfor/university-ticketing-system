    },
    {
      "name": "WebSocket Testing",
      "item": [
        {
          "name": "Socket.IO Connection Test",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/socket.io/",
              "host": ["{{baseUrl}}"],
              "path": ["socket.io", ""]
            },
            "description": "Test Socket.IO endpoint availability"
          },
          "response": []
        }
      ]
